---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
    
    {% if page.tags and page.tags.size > 0 %}
    <div class="project-tags" style="margin-top: 1rem; margin-bottom: 1rem; display: flex; flex-wrap: wrap; gap: 0.5rem;">
      {% for tag in page.tags %}
        <span class="badge badge-secondary" style="font-size: 0.85rem; padding: 0.35rem 0.75rem; font-weight: 500; border-radius: 4px;">{{ tag }}</span>
      {% endfor %}
    </div>
    {% endif %}
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
