---
layout: default
---

<div class="project-detail-container">
  <div class="project-detail-header">
    <div class="back-button">
      <a href="{{ '/projects/' | relative_url }}" class="btn btn-sm">
        <i class="fas fa-arrow-left"></i> Back to Projects
      </a>
    </div>
    
    <h1 class="project-title">{{ page.title }}</h1>
    
    <div class="project-meta">
      <div class="project-category">
        {% if page.category %}
          {% if page.category.first %}
            {% for cat in page.category %}
              <span class="badge">{{ cat }}</span>
            {% endfor %}
          {% else %}
        <span class="badge">{{ page.category }}</span>
          {% endif %}
        {% endif %}
      </div>
      
      {% if page.tags and page.tags.size > 0 %}
      <div class="project-tags" style="margin-top: 0.75rem; display: flex; flex-wrap: wrap; gap: 0.5rem;">
        {% for tag in page.tags %}
          <span class="badge badge-secondary" style="font-size: 0.85rem; padding: 0.35rem 0.75rem; font-weight: 500; border-radius: 4px;">{{ tag }}</span>
        {% endfor %}
      </div>
      {% endif %}
      
      <div class="project-links" style="margin-top: 1rem;">
        {% if page.link %}
          {% assign link_url = page.link %}
          {% if link_url contains 'github.com' %}
            <a href="{{ page.link }}" target="_blank" class="btn btn-sm btn-github">
              <i class="fab fa-github"></i> GitHub
            </a>
          {% elsif link_url contains 'gitlab.com' %}
            <a href="{{ page.link }}" target="_blank" class="btn btn-sm btn-github">
              <i class="fab fa-gitlab"></i> GitLab
            </a>
          {% else %}
            <a href="{{ page.link }}" target="_blank" class="btn btn-sm btn-github">
              <i class="fas fa-external-link-alt"></i> Link
            </a>
          {% endif %}
        {% elsif page.gitUrl %}
        <a href="{{ page.gitUrl }}" target="_blank" class="btn btn-sm btn-github">
          <i class="fab fa-github"></i> GitHub
        </a>
        {% elsif page.github %}
        <a href="{{ page.github }}" target="_blank" class="btn btn-sm btn-github">
          <i class="fab fa-github"></i> GitHub
        </a>
        {% endif %}
        
        {% if page.liveUrl %}
        <a href="{{ page.liveUrl }}" target="_blank" class="btn btn-sm btn-live">
          <i class="fas fa-external-link-alt"></i> Live Demo
        </a>
        {% endif %}
      </div>
    </div>
  </div>
  
  <div class="project-detail-content">
    <div class="project-images">
      {% if page.additional_images and page.additional_images.size > 0 %}
        <div id="project-carousel" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#project-carousel" data-slide-to="0" class="active"></li>
            {% for image in page.additional_images %}
              <li data-target="#project-carousel" data-slide-to="{{ forloop.index }}"></li>
            {% endfor %}
          </ol>
          
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="{{ page.img | relative_url }}" class="d-block w-100" alt="{{ page.title }}">
            </div>
            {% for image in page.additional_images %}
              <div class="carousel-item">
                <img src="{{ image | relative_url }}" class="d-block w-100" alt="{{ page.title }} - image {{ forloop.index }}">
              </div>
            {% endfor %}
          </div>
          
          <a class="carousel-control-prev" href="#project-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#project-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      {% else %}
        <div class="single-image">
          <img src="{{ page.img | relative_url }}" alt="{{ page.title }}">
        </div>
      {% endif %}
    </div>
    
    <div class="project-info">
      <div class="project-description">
        <h2>Overview</h2>
        <p>{{ page.description }}</p>
      </div>
      
      {% if page.technologies %}
      <div class="project-technologies">
        <h2>Technologies</h2>
        <div class="tech-tags">
          {% for tech in page.technologies %}
            <span class="tech-tag">{{ tech }}</span>
          {% endfor %}
        </div>
      </div>
      {% endif %}
      
      <div class="project-content">
        {{ content }}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Bootstrap carousel if it exists
    if (document.querySelector('.carousel')) {
      $('.carousel').carousel({
        interval: 5000
      });
    }
  });
</script>
