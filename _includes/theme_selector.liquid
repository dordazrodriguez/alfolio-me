<div class="theme-popup-container">
  <button id="settings-toggle" class="settings-toggle" aria-label="Settings" title="Settings">
    <i class="fas fa-cog"></i>
  </button>
  <div class="theme-popup">
    <div class="theme-popup-header">
      <span>Theme Settings</span>
      <button class="theme-popup-close" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="theme-selector">
      <div class="theme-selector-container">
        <div class="row">
          <div class="col">
            <button id="light-theme-btn" class="theme-btn" aria-label="Light mode" title="Light mode">
              <i class="fas fa-sun"></i>
              <span>Light</span>
            </button>
          </div>
          <div class="col">
            <button id="dark-theme-btn" class="theme-btn" aria-label="Dark mode" title="Dark mode">
              <i class="fas fa-moon"></i>
              <span>Dark</span>
            </button>
          </div>
          <div class="col">
            <button id="system-theme-btn" class="theme-btn" aria-label="System preference" title="System preference">
              <i class="fas fa-desktop"></i>
              <span>System</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
